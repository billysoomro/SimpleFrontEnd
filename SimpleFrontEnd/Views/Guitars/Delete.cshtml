@model Guitar

@{
    ViewData["Title"] = "Delete Guitar";
}

<h2>Delete Guitar</h2>

<h4>Guitar</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this guitar?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Shape
        </dt>
        <dd class="col-sm-10">
            @Model.Shape
        </dd>
        <dt class="col-sm-2">
            Strings
        </dt>
        <dd class="col-sm-10">
            @Model.Strings
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Guitars" class="btn btn-secondary">Back to List</a>
    </form>
</div>
